<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ActivityOrderDetail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_drink_detail"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Order #1512271"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:titleTextColor="@color/colorWhite"
        app:titleTextAppearance="@style/CollapsedAppbar"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/address_drink_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="123 ABC F.15 Q.TB TPHCM"
                android:drawableLeft="@drawable/ic_location_on_black_16dp"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/comment_drink_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Không có ghi chú"
                android:drawableLeft="@drawable/ic_comment_black_16dp"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/price_drink_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="450,000 VNĐ"
                android:textColor="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_attach_money_black_16dp"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:scrollbars="vertical"
        />
</LinearLayout>