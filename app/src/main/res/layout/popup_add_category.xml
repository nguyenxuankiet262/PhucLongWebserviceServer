<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_image"/>
    </RelativeLayout>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/name_catelogy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_maxCharacters="40"
        app:met_textColor="@color/colorBlack"
        android:drawableLeft="@drawable/ic_edit_black_24dp"
        android:drawablePadding="5dp"
        app:met_iconPadding="5dp"
        android:hint="Nhập tên..."/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <info.hoang8f.widget.FButton
                android:id="@+id/cancel_dialog"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"
                android:shadowColor="@color/colorBlack"
                android:text="Cancel"
                android:textColor="@color/colorWhite"
                app:cornerRadius="10dp"
                app:fButtonColor="@color/colorCancel"
                app:shadowColor="@color/colorBlack"
                app:shadowEnabled="true"
                app:shadowHeight="5dp" />

            <info.hoang8f.widget.FButton
                android:id="@+id/accept_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:shadowColor="@color/colorBlack"
                android:text="Accept"
                android:textColor="@color/colorWhite"
                app:cornerRadius="10dp"
                app:fButtonColor="@color/colorPrimaryDark"
                app:shadowColor="@color/colorBlack"
                app:shadowEnabled="true"
                app:shadowHeight="5dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>