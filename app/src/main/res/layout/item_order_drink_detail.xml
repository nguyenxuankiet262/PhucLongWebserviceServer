<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    style="@style/CardView"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_drink_history"
                android:layout_width="113dp"
                android:layout_height="113dp" />
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/name_drink_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trà đào"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: "
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_local_drink_black_15dp"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:id="@+id/quanity_drink_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:text="50"
                        android:layout_marginLeft="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại: "
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_invert_colors_black_15dp"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:id="@+id/hot_drink_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorCancel"
                        android:text="Nóng"
                        android:layout_marginLeft="0dp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/cold_drink_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorOTW"
                        android:text="Lạnh"
                        android:layout_marginLeft="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá: "
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/ic_attach_money_black_15dp"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:id="@+id/money_drink_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorOpenStore"
                        android:text="50,000 VNĐ"
                        android:layout_marginLeft="0dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:id="@+id/sugar_cart"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar: 100%"
                android:drawableLeft="@drawable/ic_local_cafe_black_15dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                />
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/ice_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ice: 100%"
                android:drawableLeft="@drawable/ic_local_cafe_black_15dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/milk_cream_topping"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk Cream"
            android:drawableLeft="@drawable/ic_add_circle_black_15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/seeds_topping"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seeds"
            android:drawableLeft="@drawable/ic_add_circle_black_15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/white_pearl_topping"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White Pearl"
            android:drawableLeft="@drawable/ic_add_circle_black_15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/black_pearl_topping"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black Pearl"
            android:drawableLeft="@drawable/ic_add_circle_black_15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/red_beans_topping"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red Bean"
            android:drawableLeft="@drawable/ic_add_circle_black_15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDesperate"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/comment_drink_detail_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có ghi chú"/>
    </LinearLayout>
</android.support.v7.widget.CardView>